<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bg_layer">
        <shape android:shape="oval">
            <solid
                android:color="@color/black_icon"
                />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>

    <item
        android:id="@+id/ll_icon_group"
        android:drawable="@drawable/ic_user_ptt_2"
        android:bottom="10dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
</layer-list>