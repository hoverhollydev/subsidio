<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_icon</item>
        <item name="colorPrimaryDark">@color/black_icon</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <!-- Splash -->
    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- TabLayout - CollapsingToolbarLayout -->
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/red_alert</item>
    </style>


    <style name="AppTheme.MaterialDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_button</item>
        <item name="colorAccent">@color/blue</item>

        <!--<item name="android:windowBackground">@drawable/dialog_background_light</item>
       <item name="android:textColorPrimary">@color/primary_text_light</item>
       <item name="android:textColorSecondary">@color/secondary_text_light</item>
       <item name="android:textColorTertiary">@color/secondary_text_light</item>-->
    </style>

    <!-- CardView -->
    <style name="CardViewStyle.Light" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView.Dark">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
